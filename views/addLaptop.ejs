<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"><%=where%></h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/index">Home</a></li>
                        <li class="breadcrumb-item active">
                            Add Laptop
                        </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->

    <section class="content">
        <div class="container-fluid">
            <form class="form-horizontal" action="/index/laptop/create/<%=where%>" method="POST" id="postForm">
                <div class="row">
                    <div class="col-lg-8 col-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="Model">Model:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="Model" id="model">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="CPU">CPU/Processor:</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="CPU">
                                            <%for(var i=0;i<cpu.length;i++){%>
                                            <option value="<%=cpu[i].CPU%>"><%=cpu[i].CPU%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="Memory">Memory:</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" name="Memory">
                                                <%for(var i=0;i<memory.length;i++){%>
                                            <option value="<%=memory[i].Memory%>"><%=memory[i].Memory%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="HDD">HDD:</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" name="HDD">
                                                <%for(var i=0;i<hdd.length;i++){%>
                                            <option value="<%=hdd[i].HDD%>"><%=hdd[i].HDD%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="OS">OS:</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="OS">
                                                <%for(var i=0;i<os.length;i++){%>
                                            <option value="<%=os[i].OS%>"><%=os[i].OS%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="Graphics">Graphics Card:</label>
                                    <div class="col-sm-6">
                                        <select class="form-control" name="Graphics">
                                                <%for(var i=0;i<graphics.length;i++){%>
                                            <option value="<%=graphics[i].Graphics%>"><%=graphics[i].Graphics%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="Price">Price(NRS):</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" name="Price" id="price">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <label class="control-label col-sm-4" for="Details">Details:</label>
                                    <div class="col-sm-12">
                                        <textarea id="Detail" type="text" rows="8" cols="10" class="form-control"
                                            name="Detail"></textarea>
                                    </div>
                                </div>
                                <div class="row form-group">
                                        <label class="control-label col-sm-4" for="Unique ID">Unique ID:</label>
                                        <div class="col-sm-4">
                                            <input id="slug" type="text" class="form-control" name="UniqueSlug" readonly>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-6">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card featured-img-height">
                                    <div class="card-body">
                                        <div class="row form-group">
                                            <label class="control-label col-sm-6" for="IsParent">Featured Image:</label>
                                            <div class="col-sm-10  featured-img-dimension">
                                                <img id="laptopImage" class="img-fluid featured-img-size" height="200"
                                                    width="200"></img>
                                            </div>

                                        </div>
                                        <input name="Image" type="file" onchange="readURL(this)">
                                        <br><br>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="center-button popup">
                        <button type="submit" class="btn btn-dark" id="submitBttn">Add</button>
                    </div>
            </form>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%-contentFor('script')%>
                                            <script src="/javascripts/ckeditor.min.js"></script>
                                            <script>
                                                $('input#model').change(function () {
                                                    $('input#slug').val(slugify($('input#model').val()));
                                                });

                                                $("#status-dropdown-menu").on('click', 'a', function () {
                                                    $("#statusBttn").text($(this).text());
                                                    $("#statusBttn").val($(this).text());
                                                });

                                                function readURL(input) {
                                                    if (input.files && input.files[0]) {
                                                        var reader = new FileReader();

                                                        reader.onload = function (e) {
                                                            $('#laptopImage')
                                                                .attr('src', e.target.result)
                                                                .width(200)
                                                                .height(200);
                                                        };

                                                        reader.readAsDataURL(input.files[0]);
                                                    }
                                                }


                                            </script>